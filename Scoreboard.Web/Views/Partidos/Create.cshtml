@model Scoreboard.Web.Models.Partido
@{
    ViewData["Title"] = "Crear partido";
}
<h1>Crear partido</h1>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label class="form-label">Fecha y hora</label>
        <input asp-for="Fecha" type="datetime-local" class="form-control" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Equipo de casa</label>
        <select asp-for="EquipoCasaId" class="form-select" asp-items="ViewBag.EquiposCasa"></select>
        <span asp-validation-for="EquipoCasaId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Equipo visitante</label>
        <select asp-for="EquipoVisitaId" class="form-select" asp-items="ViewBag.EquiposVisita"></select>
        <span asp-validation-for="EquipoVisitaId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Carreras casa</label>
        <input asp-for="CarrerasCasa" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Carreras visita</label>
        <input asp-for="CarrerasVisita" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
